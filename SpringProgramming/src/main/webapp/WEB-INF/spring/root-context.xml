<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dataSource"
		class="com.mchange.v2.c3p0.ComboPooledDataSource"
		destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver"/>
		<property name="jdbcUrl" value="jdbc:mysql://blueskii.iptime.org:3306/team5"/>
		<property name="user" value="team5"/>
		<property name="password" value="123456"/>	
		<property name="maxPoolSize" value="3"/> <!-- 기본값 15:동시conn 최대 개수 -->
		<property name="minPoolSize" value="1"/><!-- 기본값3  -->
		<property name="initialPoolSize" value="1"/><!--기본값3 -->
		
		</bean><!-- bean:객체로 만들어서 관리하라 -->
		
		<bean id="jdbcTemplate"
			class="org.springframework.jdbc.core.JdbcTemplate">
				<property name="dataSource" ref="dataSource"/><!-- setter주입 -->
			</bean>
			
	
</beans>
